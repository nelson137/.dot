#!/bin/bash
#
# If the floating terminal doesn't exist, create it.
# Then show the floating terminal.


name=FloatingTerm


termExists() {
    xdotool search --classname $name &>/dev/null
}

createTerm() {
    # Launch the terminal
    urxvt -name $name & disown
    # Wait for its window to get created
    xdotool search --sync --classname $name &>/dev/null
}

showTerm() {
    local show='scratchpad show, resize set 1640 800, move position center'
    i3-msg "[instance=\"^$name$\"] $show"
}


termExists || createTerm
showTerm
