# vim: ft=gitconfig noet

[includeIf "gitdir:/"]
	path = ~/.gitconfig.personal
[includeIf "gitdir:/opt/code/work/"]
	path = ~/.gitconfig.work

[color]
	diff = auto
	status = auto
	ui = auto
[core]
	editor = nvim
[credential]
	helper = store #cache --timeout=2592000 # 30 days
[fetch]
	prune = true
	prunetags = true
[init]
	defaultBranch = main
[merge]
	autoStash = true
[pretty]
	oneline-full = %C(yellow)%h%C(reset) %s  %C(brightblack)%ah%C(reset)  %C(magenta)%D%C(reset)
[pull]
	rebase = true
	default = "current"
[push]
	default = simple
	autoSetupRemote = true
[rebase]
	autoStash = true
[user]
	name = Nelson Earle
