#!/bin/bash

if [[ $1 == to && $# == 2 ]]; then
    shift
    to='-o ConnectTimeout=5'
    case $1 in
    aws)
        /usr/bin/ssh nelson@34.210.71.203
        ;;
    pi)
        /usr/bin/ssh -o ConnectTimeout=5 nelson@192.168.1.131 ||
        /usr/bin/ssh -o ConnectTimeout=5 nelson@75.132.101.100
        ;;
    deb|debian)
        /usr/bin/ssh -o ConnectTimeout=5 nelson@192.168.1.132 ||
        /usr/bin/ssh -o ConnectTimeout=5 nelson@75.132.101.100 -p 22132
        ;;
    *)
        echo "Unknown host: $1"
        ;;
    esac
else
    /usr/bin/ssh "$@"
fi
