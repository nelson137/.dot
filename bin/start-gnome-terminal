#!/bin/bash

gnome-terminal
wmctrl -s 1
while [[ $(xdotool get_desktop) != 1 ]]; do
    #echo "desktop $(xdotool get_desktop) waiting for desktop 1" >> /home/nelson/autostart.log
    sleep 1
done
gnome-terminal --geometry=100x40+90+50 --maximize #--full-screen
w="$(xdotool search --sync --all --onlyvisible --pid $(pgrep gnome-terminal))"
wmctrl -s 0
